{
  "name": "go2asia-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Go2Asia Ecosystem - Monorepo",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:e2e": "playwright test",
    "test:contract": "bash scripts/contract-tests.sh",
    "lighthouse": "lhci autorun",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "gen:types": "orval",
    "gen:sdk": "orval",
    "gen:all": "pnpm gen:types && pnpm gen:sdk",
    "validate:openapi": "spectral lint docs/openapi/**/*.yaml",
    "db:migrate:generate": "cd services/content-service && pnpm db:migrate:generate",
    "db:migrate:up": "cd services/content-service && pnpm db:migrate:up",
    "db:migrate:down": "cd services/content-service && pnpm db:migrate:down",
    "db:migrate:status": "cd services/content-service && pnpm db:migrate:status"
  },
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.40.0",
    "@stoplight/spectral-cli": "^6.11.0",
    "@types/node": "^20.10.0",
    "orval": "^7.3.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "pnpm": {
    "overrides": {
      "jsonwebtoken": "npm:jose@latest",
      "@tsndr/cloudflare-worker-jwt": "npm:jose@latest"
    }
  }
}

