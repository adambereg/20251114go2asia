{
  "name": "@go2asia/content-service",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:prod": "wrangler deploy --env production",
    "typecheck": "tsc --noEmit",
    "db:migrate:generate": "drizzle-kit generate:pg",
    "db:migrate:up": "drizzle-kit push:pg",
    "db:migrate:down": "drizzle-kit drop",
    "db:migrate:status": "drizzle-kit introspect:pg",
    "db:seed": "tsx src/db/seed.ts",
    "db:seed:import": "tsx src/db/seed-import.ts",
    "db:migrate:push": "tsx scripts/apply-migration-auto.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@go2asia/logger": "workspace:*",
    "drizzle-orm": "^0.29.0",
    "hono": "^3.12.0",
    "postgres": "^3.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231121.0",
    "@go2asia/config": "workspace:*",
    "@types/node": "^20.10.0",
    "csv-parse": "^5.5.0",
    "dotenv": "^16.6.1",
    "drizzle-kit": "^0.20.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "wrangler": "^3.19.0"
  }
}
